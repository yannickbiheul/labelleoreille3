{% extends 'base.html.twig' %}

{% block title %}La Belle Oreille |
	{{ actu.titre }}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12 d-flex justify-content-center">
				<h1>{{ actu.titre }}</h1>
			</div>
            <div class="col-lg-12 d-flex justify-content-center">
                <em class="date">Le {{ actu.createdAt | date("d/m/Y") }} Ã  {{ actu.createdAt | date("H:i") }}</em>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 d-flex justify-content-center">
				<a href="/images/{{ actu.image.nom }}">
					<img src="/images/{{ actu.image.nom }}" class="img-fluid">
				</a>
			</div>
		</div>
        <div class="row">
			<div class="col-lg-12 d-flex justify-content-center">
				<p>{{ actu.contenu }}</p>
			</div>
		</div>
	</div>

{% endblock %}

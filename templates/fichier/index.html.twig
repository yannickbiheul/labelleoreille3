{% extends 'base.html.twig' %}

{% block title %}La Belle Oreille |
	{{ page }}
{% endblock %}

{% block body %}

	<div class="container" id="fichier">

		<div class="row">
			<div class="col-md-6">
				<h1 class="text-center">Vos fichiers</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 d-flex flex-column justify-content-center align-items-center">

				{{ form_start(formulaire) }}

				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}

				<div class="errors">
					{{ form_errors(formulaire) }}
				</div>

				{{ form_row(formulaire.nom, {'attr': {'placeholder': "Nom du fichier"}}) }}
                {{ form_row(formulaire.lien, {'attr': {'placeholder': "Nom du fichier avec extension"}}) }}

				{{ form_end(formulaire) }}

			</div>
		</div>

	</div>

{% endblock %}
